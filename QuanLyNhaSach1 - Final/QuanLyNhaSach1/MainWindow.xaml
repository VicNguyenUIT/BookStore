<Window x:Class="QuanLyNhaSach1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuanLyNhaSach1"
          xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
     TextElement.Foreground="{DynamicResource MaterialDesignBody}"
     TextElement.FontWeight="Regular"
     TextElement.FontSize="13"
     TextOptions.TextFormattingMode="Ideal"
     TextOptions.TextRenderingMode="Auto"
     Background="{DynamicResource MaterialDesignPaper}"
     FontFamily="{DynamicResource MaterialDesignFont}"
        mc:Ignorable="d"
        Title="Quản Lý Nhà Sách" Height="600" Width="815" WindowStartupLocation="CenterScreen"  ResizeMode="CanMinimize" >

    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <!--Menu-->

        
        <Grid Grid.Row="0" >
            <materialDesign:Card Height="80">
                <materialDesign:Card.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FF65E0F3" Offset="0"/>
                        <GradientStop Color="#FF75D6C0" Offset="1"/>
                        <GradientStop Color="#FFA4F7F6" Offset="0.48"/>
                    </LinearGradientBrush>
                </materialDesign:Card.Background>
                <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="Transparent" >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition ></ColumnDefinition>
                        <ColumnDefinition ></ColumnDefinition>
                        <ColumnDefinition ></ColumnDefinition>
                        <ColumnDefinition ></ColumnDefinition>
                        <ColumnDefinition ></ColumnDefinition>
                        <ColumnDefinition ></ColumnDefinition>
                    </Grid.ColumnDefinitions>

                    <!--Hóa đơn button-->
                    
                    <Button 
                        x:Name="Hoadon_button"  Grid.Column="0"   ToolTip="Hóa Đơn" Click="Hoadon_button_Click"
                        Background="Orange"
                        Style="{StaticResource MaterialDesignRaisedDarkButton}"
                        Width="130"
                        Height="60"  >
                        <Button.Effect>
                            <DropShadowEffect ShadowDepth="3" Direction="320" Color="#FF646363"/>
                        </Button.Effect>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition></RowDefinition>
                                <RowDefinition></RowDefinition>
                            </Grid.RowDefinitions>
                            <Grid Grid.Row="0">
                                <TextBlock HorizontalAlignment="Center" Margin="0 0 0 3">Hóa Đơn</TextBlock>
                            </Grid>
                            <Grid Grid.Row="1">
                                <materialDesign:PackIcon Kind="BarcodeScan" Width="38" Height="30" HorizontalAlignment="Center" Margin="0,0,0,-7" VerticalAlignment="Bottom" />
                            </Grid>
                        </Grid>
                    </Button>
                                        
                   <!--Tìm sách button-->
                    
                    <Button 
                        x:Name="Timsach_button"  Grid.Column="1"   ToolTip="Tìm Sách" Click="Timsach_button_Click"
                        Background="DarkBlue"
                        Style="{StaticResource MaterialDesignRaisedDarkButton}"
                        Width="130"
                        Height="60" >
                        <Button.Effect>
                            <DropShadowEffect ShadowDepth="3" Direction="320" Color="#FF646363"/>
                        </Button.Effect>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition></RowDefinition>
                                <RowDefinition></RowDefinition>
                            </Grid.RowDefinitions>
                            <Grid Grid.Row="0">
                                <TextBlock HorizontalAlignment="Center" Margin="0 0 0 3">Tìm Sách</TextBlock>
                            </Grid>
                            <Grid Grid.Row="1">
                                <materialDesign:PackIcon Kind="DatabaseSearch" Width="38" Height="30" HorizontalAlignment="Center" Margin="0,0,0,-7" VerticalAlignment="Bottom" />
                            </Grid>
                        </Grid>
                    </Button>

                    <!--Nhập button-->
                    
                    <Button 
                        x:Name="Nhapsach_button"  Grid.Column="2"   
                        ToolTip="Nhập sách"
                        Background="DarkBlue"
                        Click="Nhapsach_button_Click"
                        Style="{StaticResource MaterialDesignRaisedDarkButton}"
                        Width="130"
                        Height="60" >
                        <Button.Effect>
                            <DropShadowEffect Direction="320" Color="#FF646363" ShadowDepth="3"/>
                        </Button.Effect>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition></RowDefinition>
                                <RowDefinition></RowDefinition>
                            </Grid.RowDefinitions>
                            <Grid Grid.Row="0">
                                <TextBlock HorizontalAlignment="Center" Margin="0 0 0 3">Nhập Sách</TextBlock>
                            </Grid>
                            <Grid Grid.Row="1">
                                <materialDesign:PackIcon Kind="BookPlus" Width="38" Height="30" HorizontalAlignment="Center" Margin="0,0,0,-7" VerticalAlignment="Bottom" />
                            </Grid>
                        </Grid>
                    </Button>
                    
               <!--Khách hàng button-->

                    <Button 
                        x:Name="Khachhang_button" Grid.Column="3"   
                        ToolTip="Khách Hàng"
                        Click="Khachhang_button_Click"
                        Background="DarkBlue"
                        Style="{StaticResource MaterialDesignRaisedDarkButton}"
                        Width="130"
                        Height="60" >
                        <Button.Effect>
                            <DropShadowEffect ShadowDepth="3" Direction="320" Color="#FF646363"/>
                        </Button.Effect>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition></RowDefinition>
                                <RowDefinition></RowDefinition>
                            </Grid.RowDefinitions>
                            <Grid Grid.Row="0">
                                <TextBlock HorizontalAlignment="Center" Margin="0 0 0 3">Khách Hàng</TextBlock>
                            </Grid>
                            <Grid Grid.Row="1">
                                <materialDesign:PackIcon Kind="Elevator" Width="38" Height="30" HorizontalAlignment="Center" Margin="0,0,0,-7" VerticalAlignment="Bottom" />
                            </Grid>
                        </Grid>
                    </Button>

                    <!--Báo cáo tháng button-->
                    
                    <Button 
                        x:Name="Baocaothang_button"  Grid.Column="4" 
                        ToolTip="Báo Cáo Tháng"
                        Background="DarkBlue"
                        Click="Baocaothang_button_Click"
                        Style="{StaticResource MaterialDesignRaisedDarkButton}"
                        Width="130"
                        Height="60" >
                        <Button.Effect>
                            <DropShadowEffect Direction="320" Color="#FF646363" ShadowDepth="3"/>
                        </Button.Effect>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <Grid Grid.Row="0">
                                <TextBlock HorizontalAlignment="Center" Margin="0 0 0 3"><Run Text="Báo Cáo Tháng"/></TextBlock>
                            </Grid>
                            <Grid Grid.Row="1">
                                <materialDesign:PackIcon Kind="Newspaper" Width="38" Height="30" HorizontalAlignment="Center" Margin="0,0,0,-7" VerticalAlignment="Bottom" />
                            </Grid>
                        </Grid>
                    </Button>

                    <!--Quy định button-->

                    <Button 
                        x:Name="Quydinh_button"  Grid.Column="6"  
                        ToolTip="Thay Đổi Quy Định"
                        Click="Quydinh_button_Click"
                        Background="DarkBlue"
                        Style="{StaticResource MaterialDesignRaisedDarkButton}"
                        Width="130"
                        Height="60" >
                        <Button.Effect>
                            <DropShadowEffect Direction="320" Color="#FF646363" ShadowDepth="3"/>
                        </Button.Effect>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <Grid Grid.Row="0">
                                <TextBlock HorizontalAlignment="Center" Margin="0 0 0 3"><Run Text="Quy Định"/></TextBlock>
                            </Grid>
                            <Grid Grid.Row="1">
                                <materialDesign:PackIcon Kind="CalendarText" Width="38" Height="30" HorizontalAlignment="Center" Margin="0,0,0,-7" VerticalAlignment="Bottom" />
                            </Grid>
                        </Grid>
                    </Button>
                    
                    <!--Button end-->

                </Grid>
                </materialDesign:Card>
            </Grid>
        
        
        <!--Main-->

        <!---->
        <!---->
        <!--Quy định Main Grid-->
        <!---->
        <!---->
        
        <Grid x:Name="Rule" Grid.Row="1" Margin="15" Visibility="Hidden">
            <materialDesign:Card Height="462">
                <Grid >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"></ColumnDefinition>
                        <ColumnDefinition ></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    
                    <Border
                        VerticalAlignment="Center"
                        Height="450"
                        Grid.Column="0"
                        BorderBrush="Gray"
                        BorderThickness="1" Margin="0,6" HorizontalAlignment="Left" Width="160"  >
                        <Grid >
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto"></RowDefinition>
                                <RowDefinition Height="auto"></RowDefinition>
                                <RowDefinition Height="auto"></RowDefinition>
                            </Grid.RowDefinitions>

                            <!--Dòng 1-->
                            <Grid Grid.Row="0">
                                <Button  
                                    Grid.Column="0"
                                    x:Name="Rule_Nhapsach"
                                    Click="Rule_Nhapsach_Click"
                                    Background="GreenYellow"
                                    HorizontalAlignment="Center"
                                    Margin="0,4,0,0"
                                    Style="{StaticResource MaterialDesignRaisedAccentButton}"
                                    Width="150"
                                    ToolTip="Resource name: MaterialDesignRaisedAccentButton" RenderTransformOrigin="0.06,0.5"  >
                                    Nhập sách
                                </Button>
                            </Grid>
                            
                            <!--Dòng 2-->
                            
                            <Button  
                                Grid.Row="1"
                                x:Name="Rule_Hoadon"
                                Click="Rule_Hoadon_Click"
                                HorizontalAlignment="Center"
                                Margin="0,4,0,0"
                                Style="{StaticResource MaterialDesignRaisedAccentButton}"
                                Width="150"
                                Background="LightGray"
                                ToolTip="Resource name: MaterialDesignRaisedAccentButton" RenderTransformOrigin="0.06,0.5"  >
                                Hóa đơn
                            </Button>

                            <!--Dòng 3-->

                            <Button 
                                Grid.Row="2" 
                                x:Name="Rule_Phieuthutien"
                                Click="Rule_Phieuthutien_Click"
                                HorizontalAlignment="Center"
                                Margin="0,4,0,0"
                                Style="{StaticResource MaterialDesignRaisedAccentButton}"
                                Width="150"
                                Background="LightGray"
                                ToolTip="Resource name: MaterialDesignRaisedAccentButton" RenderTransformOrigin="0.06,0.5"  >
                                Phiếu thu tiền
                            </Button>
                        </Grid>
                    </Border>
                    
                    <!---->
                    <!--Grid Quy định nhập sách -->
                    <!---->
                    <Grid
                        Grid.Column="1"
                        x:Name="Nhapsach_Quydinh_Grid"
                        Visibility="Visible"  >
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"></RowDefinition>
                            <RowDefinition Height="auto"></RowDefinition>
                            <RowDefinition Height="auto"></RowDefinition>
                        </Grid.RowDefinitions>
                        <materialDesign:Card Grid.Row="0" Height="40" Margin="10 20 0 0">
                            <Grid>
                                <TextBlock 
                                    Width="200"
                                    Margin="10,0,0,0"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center">
                                    -Số lượng sách nhập ít nhất là:
                                </TextBlock>

                                <TextBox
                                    x:Name="Nhaptoithieu_Quydinh_Textbox"
                                    Margin="195,-2,0,7"
                                    HorizontalAlignment="Left"
                                    Width="50"
                                    materialDesign:HintAssist.Hint=""
                                    Style="{StaticResource MaterialDesignFloatingHintTextBox}" />
                            </Grid>
                        </materialDesign:Card>
                        
                        <materialDesign:Card Grid.Row="1" Height="40" Margin="10 5 0 0">
                            <Grid>
                                <TextBlock 
                                    Width="250"
                                    Margin="10,0,0,0"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center">
                                    -Chỉ nhập các đầu sách có lượng tồn ít hơn: 
                                </TextBlock>
                                <TextBox
                                    x:Name="Sachtontoithieu_Nhap_Quydinh_Textbox"
                                    Margin="268,-2,0,7"
                                    HorizontalAlignment="Left"
                                    Width="50"
                                    materialDesign:HintAssist.Hint=""
                                    Style="{StaticResource MaterialDesignFloatingHintTextBox}" />
                            </Grid>
                        </materialDesign:Card>
                                    
                        <Button  
                            Grid.Row="2"
                            x:Name="Luu_Nhapsach_Quydinh"
                            Click="Luu_Nhapsach_Quydinh_Click"
                            Background="GreenYellow"
                            HorizontalAlignment="Right"
                            Margin="0,4,30,0"
                            Style="{StaticResource MaterialDesignRaisedAccentButton}"
                            Width="100"
                            ToolTip="Resource name: MaterialDesignRaisedAccentButton" RenderTransformOrigin="0.06,0.5"  >
                            Lưu
                        </Button>
                    </Grid>
                                
                    <!---->
                    <!--Grid Quy định hóa đơn -->
                    <!---->
                    <Grid
                        Grid.Column="1"
                        x:Name="HoaDon_Quydinh_Grid"
                        Visibility="Hidden" >
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"></RowDefinition>
                            <RowDefinition Height="auto"></RowDefinition>
                        </Grid.RowDefinitions>
                        <materialDesign:Card Grid.Row="0" Height="70" Margin="10 20 0 0">
                            <Grid>
                                <TextBlock 
                                    Width="auto"
                                    Margin="10,15,0,39"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center">
                                    Chỉ bán cho các khách hàng nợ không quá:
                                </TextBlock>
                                <TextBox
                                    x:Name="Tienno_Quydinh_Textbox"
                                    Margin="265,-30,0,35"
                                    HorizontalAlignment="Left"
                                    Width="50"
                                    materialDesign:HintAssist.Hint=""
                                    Style="{StaticResource MaterialDesignFloatingHintTextBox}" />
                                <TextBlock 
                                    Width="auto"
                                    Margin="10,40,0,14"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center">
                                    và đầu sách có lượng tồn sau khi bán ít nhất là:
                                </TextBlock>
                                        
                                <TextBox
                                    x:Name="Sachtontoithieu_Ban_Quydinh_Textbox"
                                    Margin="287,-4,0,9"
                                    HorizontalAlignment="Left"
                                    Width="50"
                                    materialDesign:HintAssist.Hint=""
                                    Style="{StaticResource MaterialDesignFloatingHintTextBox}" />
                                
                            </Grid>
                        </materialDesign:Card>
                        
                        <Button  
                            Grid.Row="1"
                            x:Name="Luu_Hoadon_Quydinh"
                            Click="Luu_Hoadon_Quydinh_Click"
                            Background="GreenYellow"
                            HorizontalAlignment="Right"
                            Margin="0,4,30,0"
                            Style="{StaticResource MaterialDesignRaisedAccentButton}"
                            Width="100"
                            ToolTip="Resource name: MaterialDesignRaisedAccentButton" RenderTransformOrigin="0.06,0.5"  >
                            Lưu
                        </Button>
                    </Grid>
                    
                    <!---->
                    <!--Grid Quy định nhập sách -->
                    <!---->
                    <Grid
                        Grid.Column="1"
                        x:Name="Phieuthutien_Quydinh_Grid"
                        Visibility="Hidden" >
                        <materialDesign:Card Grid.Row="1" Height="40" Margin="10 5 0 0">
                            <Grid>
                                <CheckBox 
                                    Content="Số tiền thu không vượt quá số tiền Khách hàng đang nợ" 
                                    x:Name="Phieuthutien_Quydinh_Checkbox"
                                    Click="Phieuthutien_Quydinh_Checkbox_Click"
                                    Margin="20,0,-20,0">        
                                </CheckBox>
                            </Grid>
                        </materialDesign:Card>
                    </Grid>
                    
                </Grid>
            </materialDesign:Card>
        </Grid>
        
        <!---->
        <!---->
        <!--Báo cáo tháng Main Grid -->
        <!---->
        <!---->
        
        <Grid x:Name="Report" Grid.Row="1" Margin="15" Visibility="Hidden">
            <materialDesign:Card Height="462">
                <Grid >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"></ColumnDefinition>
                        <ColumnDefinition Width="auto"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    
                    <!--Menu-->
                    
                    <Border
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Width="160"
                        Height="450"
                        Grid.Column="0"
                        BorderBrush="Gray"
                        BorderThickness="1" Margin="0,6"  >
                        <Grid >
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto"></RowDefinition>
                                <RowDefinition Height="auto"></RowDefinition>
                                <RowDefinition Height="auto"></RowDefinition>
                            </Grid.RowDefinitions>
                            <Button 
                                Grid.Row="0"
                                Margin="0 5 0 0"
                                x:Name="Lapbaocaothang_Baocaothang_Button"
                                Click="Lapbaocaothang_Baocaothang_Button_Click"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Top"
                                Background="GreenYellow"
                                Style="{StaticResource MaterialDesignRaisedAccentButton}"
                                Width="150"
                                ToolTip="Resource name: MaterialDesignRaisedAccentButton" >
                                Lập báo cáo tháng
                            </Button>
                            <Button 
                                Grid.Row="1"
                                Margin="0 5 0 0"
                                x:Name="Baocaoton_button"
                                Click="Baocaoton_button_Click"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Top"
                                Background="LightGray"
                                Style="{StaticResource MaterialDesignRaisedAccentButton}"
                                Width="150"
                                ToolTip="Resource name: MaterialDesignRaisedAccentButton" >
                                Báo cáo tồn
                            </Button>
                            <Button 
                                Grid.Row="2"
                                Margin="0 5 0 0"
                                x:Name="Baocaocongno"
                                Click="Baocaocongno_Click"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Top"
                                Background="LightGray"
                                Style="{StaticResource MaterialDesignRaisedAccentButton}"
                                Width="150"
                                ToolTip="Resource name: MaterialDesignRaisedAccentButton" >
                                Báo cáo công nợ
                            </Button>
                        </Grid>
                    </Border>
                    <!---->
                    
                    <Grid Grid.Column="1"
                          Width="600"
                          x:Name="Lapbaocaothang_Baocaothang_Grid" 
                          Visibility="Visible">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"></RowDefinition>
                            <RowDefinition Height="auto"></RowDefinition>
                            <RowDefinition Height="Auto"></RowDefinition>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="1" 
                              Margin="0 5 0 0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition></ColumnDefinition>
                                <ColumnDefinition></ColumnDefinition>
                                <ColumnDefinition></ColumnDefinition>
                            </Grid.ColumnDefinitions>

                            <Button 
                                Grid.Column="1"
                                Margin="0 0 10 0"
                                x:Name="Thongke_Lapbaocaothang_Report"
                                Click="Thongke_Lapbaocaothang_Report_Click"
                                HorizontalAlignment="Right"
                                Background="GreenYellow"
                                Style="{StaticResource MaterialDesignRaisedAccentButton}"
                                Width="100"
                                ToolTip="Lập báo cáo tháng này"     >
                                Thống kê
                            </Button>
                            <Button 
                                Grid.Column="2"
                                x:Name="Lapbaocao_Report"
                                Click="Lapbaocao_Report_Click"
                                HorizontalAlignment="Left"
                                Background="GreenYellow"
                                Style="{StaticResource MaterialDesignRaisedAccentButton}"
                                Width="100"
                                ToolTip="Lập báo cáo tháng này"      >
                                Lưu
                            </Button>
                        </Grid>
                        
                        <ListView
                            Grid.Row="2" 
                            x:Name="List_Lapbaocaoton"
                            Height="350"
                            Visibility="Visible"
                            ItemsSource="{Binding Items1}"  Margin="0,0,0,65">
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn 
                                        DisplayMemberBinding="{Binding STT}"
                                        Header="STT" />
                                    <GridViewColumn
                                        Width="130"
                                        DisplayMemberBinding="{Binding Tensach}"
                                        Header="Sách" />
                                    <GridViewColumn 
                                        Width="100"
                                        DisplayMemberBinding="{Binding TonDau}"
                                        Header="Tồn đầu" />
                                    <GridViewColumn 
                                        Width="110"
                                        DisplayMemberBinding="{Binding Soluongnhap}"
                                        Header="Lượng nhập" />
                                    <GridViewColumn
                                        Width="110"
                                        DisplayMemberBinding="{Binding Soluongban}"
                                        Header="Số lượng bán" />
                                    <GridViewColumn 
                                        Width="100"
                                        DisplayMemberBinding="{Binding TonCuoi}"
                                        Header="Tồn cuối" />
                                </GridView>
                            </ListView.View>
                        </ListView>
                    </Grid>
                    <!---->
                    <Grid Grid.Column="1"
                          Width="600"
                          x:Name="Baocaoton_Baocaothang_Grid" 
                          Visibility="Hidden">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"></RowDefinition>
                            <RowDefinition Height="auto"></RowDefinition>
                            <RowDefinition Height="Auto"></RowDefinition>
                            <RowDefinition/>
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="1" >
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition></ColumnDefinition>
                                <ColumnDefinition></ColumnDefinition>
                                <ColumnDefinition></ColumnDefinition>
                            </Grid.ColumnDefinitions>

                            <TextBox 
                                Grid.Column="0"
                                x:Name="Nhapthang_Baocaoton_Textbox"
                                Margin="0,0,0,5"
                                HorizontalAlignment="Center"
                                Width="100"
                                materialDesign:HintAssist.Hint="Nhập Tháng"
                                Style="{StaticResource MaterialDesignFloatingHintTextBox}" />

                            <TextBox
                                Grid.Column="1"
                                x:Name="Nhapnam_Baocaoton_Textbox"
                                Margin="0,0,0,5"
                                HorizontalAlignment="Left"
                                Width="100"
                                materialDesign:HintAssist.Hint="Nhập năm"
                                Style="{StaticResource MaterialDesignFloatingHintTextBox}"  />

                            <Button 
                                Grid.Column="2"
                                x:Name="Tim_Baocaoton_Report"
                                Click="Tim_Baocaoton_Report_Click"
                                HorizontalAlignment="Left"
                                Background="GreenYellow"
                                Style="{StaticResource MaterialDesignRaisedAccentButton}"
                                Width="100"
                                ToolTip="Resource name: MaterialDesignRaisedAccentButton"      >
                                Tìm
                            </Button>
                        </Grid>

                        <ListView
                            Grid.Row="2"
                            x:Name="Listview_baocaoton"
                            Height="270"
                            Margin="0,0,0,65">
                            <ListView.View>
                                            <GridView>
                                                <GridViewColumn 
                                        DisplayMemberBinding="{Binding STT}"
                                        Header="STT" />
                                                <GridViewColumn 
                                        Width="150"
                                        DisplayMemberBinding="{Binding Tensach}"
                                            Header="Sách" />
                                                <GridViewColumn
                                        Width="100"
                                        DisplayMemberBinding="{Binding TonDau}"
                                        Header="Tồn đầu" />
                                                <GridViewColumn 
                                        Width="100"
                                        DisplayMemberBinding="{Binding Soluongnhap}"
                                        Header="Lượng nhập" />
                                                <GridViewColumn 
                                        Width="100"
                                        DisplayMemberBinding="{Binding Soluongban}"
                                        Header="Lượng bán" />
                                                <GridViewColumn
                                        Width="100"
                                        DisplayMemberBinding="{Binding TonCuoi}"
                                        Header="Tồn cuối" />
                                            </GridView>
                            </ListView.View>
                        </ListView>
                    </Grid>
                                <!---->

                            <Grid Grid.Column="1"
                                      Width="600"
                                      x:Name="Baocaocongno_Baocaothang_Grid" 
                                      Visibility="Hidden">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="auto"></RowDefinition>
                                    <RowDefinition Height="auto"></RowDefinition>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>

                                <Grid Grid.Row="0" >
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition></ColumnDefinition>
                                        <ColumnDefinition></ColumnDefinition>
                                        <ColumnDefinition></ColumnDefinition>
                                    </Grid.ColumnDefinitions>

                                   

                                    <Button 
                                            Grid.Column="2"
                                            x:Name="Thongke_Baocaocongno_Report"
                                            Click="Thongke_Baocaocongno_Report_Click"
                                            HorizontalAlignment="Left"
                                            Background="GreenYellow"
                                        Style="{StaticResource MaterialDesignRaisedAccentButton}"
                                        Width="100"
                                        ToolTip="Resource name: MaterialDesignRaisedAccentButton"
                                              >
                                        Tìm
                                    </Button>
                                </Grid>



                                <ListView
                                    Grid.Row="1"
                                    x:Name="Listview_baocaocongno"
                                    Height="350"
                                    Margin="0,0,0,65">
                                    <ListView.View>
                                        <GridView>
                                            <GridViewColumn 
                                            DisplayMemberBinding="{Binding STT}"
                                            Header="STT" />
                                            <GridViewColumn Width="150"
                                            DisplayMemberBinding="{Binding KhachHang.HoTen}"
                                            Header="Khách hàng" />
                                            <GridViewColumn Width="100"
                                            DisplayMemberBinding="{Binding NoDau}"
                                            Header="Nợ đầu" />
                                            <GridViewColumn Width="100"
                                            DisplayMemberBinding="{Binding No}"
                                            Header="Nợ" />
                                            <GridViewColumn Width="100"
                                            DisplayMemberBinding="{Binding Tra}"
                                            Header="Trả" />
                                            <GridViewColumn Width="100"
                                            DisplayMemberBinding="{Binding NoCuoi}"
                                            Header="Nợ cuối" />
                                        </GridView>
